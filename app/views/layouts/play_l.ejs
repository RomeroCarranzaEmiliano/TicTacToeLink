    <script type="text/javascript">
      $(document).ready(function(){
        var match = $('#match').val();
        io.socket.post('/server/conn', {match}, function(data, data2){
          $('#me').val(data);
          $('#vs').val(data + 1);
          if (data + 1 == 2) {
            $('#vs').val(0);
          }
        });
      });

      //menus
      //=======================
      $('#main').click(function(){
        window.location.href = "/";
      });
      function openInNewTab(url) {
        var win = window.open(url, '_blank');
        win.focus();
      }
      //=======================


      //MOVES
      //===========================================================================
      $('#a0').click(function(){
        var match = $('#match').val();
        var move = 0;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#a1').click(function(){
        var match = $('#match').val();
        var move = 1;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#a2').click(function(){
        var match = $('#match').val();
        var move = 2;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });

      $('#b0').click(function(){
        var match = $('#match').val();
        var move = 3;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#b1').click(function(){
        var match = $('#match').val();
        var move = 4;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#b2').click(function(){
        var match = $('#match').val();
        var move = 5;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });

      $('#c0').click(function(){
        var match = $('#match').val();
        var move = 6;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#c1').click(function(){
        var match = $('#match').val();
        var move = 7;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      $('#c2').click(function(){
        var match = $('#match').val();
        var move = 8;
        var me = $('#me').val();
        io.socket.post('/player/move', {match, move, me}, function(data, data2){});
      });
      //===========================================================================





      io.socket.on('update-board', function(data){
        var board = [];
        var c = ['', 'O', 'X'];
        var i;
        for (i=0; i<data.length; i++) {
          board[i] = c[data[i]];
        }
        $('#a0').val(board[0]);
        $('#a1').val(board[1]);
        $('#a2').val(board[2]);

        $('#b0').val(board[3]);
        $('#b1').val(board[4]);
        $('#b2').val(board[5]);

        $('#c0').val(board[6]);
        $('#c1').val(board[7]);
        $('#c2').val(board[8]);
      });

      var turn;
      io.socket.on('update-turn', function(data){
        turn = data;
      });

      var time; 
      var h;
      io.socket.on('update-time', function(data){
        time = data;
        h = (time*100)/5000;
        if ($('#me').val() == turn) {
          $('#time_me_fill').css({'height': h+'%'});
        } else {
          $('#time_vs_fill').css({'height': h+'%'});
        }
      });

      io.socket.on('update-score', function(data){
        var score = data;
        var me = $('#me').val();
        var vs = $('#vs').val();
        
        $('#score_me').val('ME: '+score[me]);
        $('#score_vs').val('OTHER: '+score[vs]);
      });

      io.socket.on('show-parcial-winner', function(data){
        var winner = data;
        var match = $('#match').val();
        var me = $('#me').val();
        var vs = $('#vs').val();
        
        if (winner == me) {
          $('#name_me').css({'color':'green'});
        } else {
          $('#name_vs').css({'color':'green'});
        }

  
        setTimeout(function() {
          $('#name_me').css({'color':'white'});
          $('#name_vs').css({'color':'white'});

        }, 1000);
        setTimeout(function() {
          io.socket.post('/player/animated', {match}, function(data, data2){
      
          });
        }, 3000);
        
      });




    </script>

